<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.TestActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/detail_view_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        android:visibility="visible">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/word_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:gravity="center"
                            android:text="Abandon"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
                        <TextView
                            android:id="@+id/eng_pron_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Abandon"
                            android:layout_marginBottom="10dp"/>


                    </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="Noun"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/font_color"
                            />



                        <TextView
                            android:id="@+id/bang_word_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:textSize="18sp"
                            android:text="Abandon"
                            android:textColor="@color/f_color"
                            />

                        <TextView
                            android:id="@+id/bng_pron_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Abandon"
                            android:textSize="16sp"
                            android:textColor="@color/f_color"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <!--<android.support.v7.widget.CardView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="2dp">-->


                <!--</android.support.v7.widget.CardView>-->



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="Synonyms"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/font_color"
                            />

                        <TextView
                            android:id="@+id/bang_syn_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:textSize="18sp"
                            android:text="Bengali Synonyms"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/f_color" />
                    </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="Definition"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/font_color"
                            />

                        <TextView
                            android:id="@+id/defi_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:textSize="18sp"
                            android:text="Definition"
                            android:textColor="@color/f_color"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="Synonyms"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/font_color"
                            />

                        <TextView
                            android:id="@+id/eng_syn_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:textSize="18sp"
                            android:text="English Synonyms"
                            android:textColor="@color/f_color"
                            android:layout_marginBottom="10dp" />

                    </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="Antonyms"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/font_color"
                            />

                        <TextView
                            android:id="@+id/eng_antonyms_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:textSize="18sp"
                            android:text="English Antonyms"
                            android:textColor="@color/f_color"
                            android:layout_marginBottom="10dp" />
                    </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="Examples"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/font_color"
                            />

                        <TextView
                            android:id="@+id/exanple_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:textSize="18sp"
                            android:text="Examples"
                            android:textColor="@color/f_color"
                            android:layout_marginBottom="10dp" />
                    </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>